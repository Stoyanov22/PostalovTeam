@model PostalovTeam.Models.LogInModel

<h2>Log In</h2>

<form action="/Auth/LogIn" method="post">
    <div class="editor-label"><label for="Email">Email</label></div>
    <div class="editor-field"><input class="text-box single-line textColorBlack" data-val="true" data-val-required="The Email field is required." id="Email" name="Email" type="email" value="" /> <span class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span></div>
    <div class="editor-label"><label for="Password">Password</label></div>
    <div class="editor-field"><input class="text-box single-line password textColorBlack" data-val="true" data-val-required="The Password field is required." id="Password" name="Password" type="password" value="" /> <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span></div>
    <br />
    <p>
        <button type="submit">Log In</button>
    </p>
</form>