<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Postalov Team</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    @Scripts.Render("~/jquery-3.3.1.js")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Начало", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Магазин", "Index", "Store")</li>
                    <li>@Html.ActionLink("За мен", "Index", "About")</li>
                    <li>@Html.ActionLink("PostArt", "Index", "PostArt")</li>
                    <li>@Html.ActionLink("Fat-Fight", "Index", "FatFight")</li>
                    <li>@Html.ActionLink("Kangoo Jump", "Index", "KangooJump")</li>
                    <li>@Html.ActionLink("Галерия", "Index", "Gallery")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Изход", "LogOut", "Auth")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Логин", "LogIn", "Auth")</li>
                        <li>@Html.ActionLink("Регистрация", "Register", "Auth")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Postalov Team</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
