@model IEnumerable<PostalovTeam.Models.Category>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Създай продукт</title>
</head>
<body>
    @using (Html.BeginForm("CreateProduct", "Store", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <label>Име</label>
                    <br />
                    <input type="text" placeholder="Въведи име" name="name" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Категория</label>
                    @Html.DropDownList("CategoryId", Model.Select(i => new SelectListItem()
               {
                   Text = i.Name,
                   Value = i.CategoryId.ToString()
               }), htmlAttributes: new { @class = "form-control" , @name = "photo"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Цена</label>
                    <br />
                    <input type="text" placeholder="Въведи цена" name="price" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label>Снимка</label>
                    <br />
                    <input type="file" name="photo" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>